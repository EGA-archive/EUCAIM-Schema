{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Minimum clinical attributes for negative screening or control groups",
  "type": "object",
  "properties": {
    "PatientID": {
      "type": "string",
      "description": "A unique identifier for the patient. Should match the Patient ID DICOM tag (0010,0020) and the anonymization processes.",
      "example": "X123456"
    },
    "Population": {
      "$ref": "https://raw.githubusercontent.com/EGA-archive/EUCAIM-Schema/refs/heads/main/Common/OntologyTerm.json?token=GHSAT0AAAAAADPDS7CAR7JO4LE3XDVBOWCG2IUSEXA",
      "description": "Categorization of the subjects in the dataset based on their status.",
      "examples": [
        {
          "id": "EUCAIM:COM1002625",
          "label": "Control group"
        },
        {
          "id": "EUCAIM:COM1002626",
          "label": "Negative screening"
        }
      ]
    },
    "Sex": {
      "$ref": "https://raw.githubusercontent.com/EGA-archive/EUCAIM-Schema/refs/heads/main/Common/OntologyTerm.json?token=GHSAT0AAAAAADPDS7CAR7JO4LE3XDVBOWCG2IUSEXA",
      "description": "Biological sex at Birth.",
      "examples": [
        {
          "id": "EUCAIM:COM1001370",
          "label": "Female"
        },
        {
          "id": "EUCAIM:COM1001366",
          "label": "Male"
        }
      ]
    },
    "DateOfImagingAcquisition": {
      "type": "string",
      "format": "date",
      "description": "Date when imaging study occurred for screening or control group.",
      "example": "2024-01-01"
    },
    "AgeYears": {
      "type": "number",
      "description": "Age of the subject when the imaging study was acquired (in years, one decimal allowed).",
      "example": 45.5
    },
    "Topography": {
      "$ref": "https://raw.githubusercontent.com/EGA-archive/EUCAIM-Schema/refs/heads/main/Common/OntologyTerm.json?token=GHSAT0AAAAAADPDS7CAR7JO4LE3XDVBOWCG2IUSEXA",
      "description": "Area examined with the imaging modality (organ). In negative screening and control group cases, region and laterality are not mandatory.",
      "examples": [
        {
          "id": "EUCAIM:BP1000301",
          "label": "Bladder"
        },
        {
          "id": "EUCAIM:BP1000051",
          "label": "Brain"
        }
      ]
    }
  },
  "required": [
    "PatientID",
    "Population",
    "Sex",
    "AgeYears"
  ]
}
