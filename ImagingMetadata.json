{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EUCAIM Minimum Imaging Metadata",
  "type": "object",
  "properties": {
    "patientId": {
      "type": "string",
      "description": "Unique identifier for the patient (DICOM tag 0010,0020)",
      "example": "SUBJECT001"
    },
    "imageModality": {
      "description": "Modality of the imaging study (DICOM tag 0008,0060), controlled vocabulary",
      "$ref": "https://raw.githubusercontent.com/EGA-archive/EUCAIM-Schema/refs/heads/main/Common/OntologyTerm.json?token=GHSAT0AAAAAADPDS7CAR7JO4LE3XDVBOWCG2IUSEXA",
      "examples": [
        {
          "id": "EUCAIM:IMG1000026",
          "label": "Computed tomography"
        },
        {
          "id": "EUCAIM:IMG1000030",
          "label": "Mammography"
        }
      ]
    },
    "imageBodyPart": {
      "description": "Anatomical area imaged (DICOM tag 0018,0015), controlled vocabulary",
      "$ref": "https://raw.githubusercontent.com/EGA-archive/EUCAIM-Schema/refs/heads/main/Common/OntologyTerm.json?token=GHSAT0AAAAAADPDS7CAR7JO4LE3XDVBOWCG2IUSEXA",
      "examples": [
        {
          "id": "EUCAIM:BP1000067",
          "label": "Chest"
        },
        {
          "id": "EUCAIM:BP1000220",
          "label": "Arm"
        }
      ]
    },
    "imageManufacturer": {
      "description": "Device manufacturer (DICOM tag 0008,0070), controlled vocabulary",
      "$ref": "https://raw.githubusercontent.com/EGA-archive/EUCAIM-Schema/refs/heads/main/Common/OntologyTerm.json?token=GHSAT0AAAAAADPDS7CAR7JO4LE3XDVBOWCG2IUSEXA",
      "examples": [
        {
          "id": "EUCAIM:IMG1000047",
          "label": "General Electric"
        },
        {
          "id": "EUCAIM:IMG1000044",
          "label": "Siemens"
        }
      ]
    },
    "dateOfImageAcquisition": {
      "type": "string",
      "format": "date",
      "description": "Acquisition date of the image (DICOM tag 0008,0022), format YYYY-MM-DD",
      "example": "2000-01-01",
      "$comment": "Mandatory if available."
    },
    "patientAgeAtStudy": {
      "type": "number",
      "description": "Patient age at time of imaging study (DICOM tag 0010,1010), years with decimal allowed",
      "example": 47
    }
  },
  "required": [
    "patientId",
    "imageModality",
    "imageBodyPart",
    "imageManufacturer",
    "dateOfImageAcquisition"
  ]
}



